<?php

function hoppinger_permissions_ensure_permissions($role, $perms = array()) {
  if (is_numeric($role)) {
    $rid = $role;
  } else {
    $role = kw_itemnames_ensure(
      'user_role', 
      'role-' . $role,
      array(
        'name' => $role,
      ),
      array()
    );
    $rid = $role->rid;
  }

  if ($perms) {
    user_role_grant_permissions($rid, $perms);
  }
}
